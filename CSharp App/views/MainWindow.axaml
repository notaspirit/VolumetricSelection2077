<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VolumetricSelection2077.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VolumetricSelection2077.MainWindow"
        Title="VolumetricSelection2077"
        Icon="../assets/redCube.ico"
        Width="500"
        Height="300"
        Background="#171c26">
    <Border Margin="5">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
            <TextBlock Grid.Row="0" Text="VolumetricSelection2077" FontSize="32" FontWeight="Bold" Margin="5"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                <Button Content="Settings" Click="SettingsButton_Click" Margin="0,0,5,0"/>
                <Button Content="Clear Log" Click="ClearLogButton_Click"/>
            </StackPanel>
            <ContentControl Grid.Row="2" x:Name="SettingsContent" />
            <views:LogViewer Grid.Row="4" x:Name="LogViewer" Margin="5"/>
        </Grid>
    </Border>
</Window>