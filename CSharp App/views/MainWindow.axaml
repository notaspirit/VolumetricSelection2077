<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:VolumetricSelection2077.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VolumetricSelection2077.MainWindow"
        Title="VolumetricSelection2077"
        Icon="../assets/redCube.ico"
        Width="500"
        Height="300"
        Background="#171c26">
    <Border Margin="5">
        <StackPanel>
            <TextBlock Text="VolumetricSelection2077" FontSize="32" FontWeight="Bold" Margin="5"/>
            <Button Content="Settings" Click="SettingsButton_Click" Margin="5"/>
            <ContentControl x:Name="SettingsContent" />
            <views:LogViewer x:Name="LogViewer" Height="200" Margin="5"/>
        </StackPanel>
    </Border>
</Window>