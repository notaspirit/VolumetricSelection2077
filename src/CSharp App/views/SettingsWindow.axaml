<Window
    Background="#171c26"
    Icon="../assets/redCube.ico"
    SizeToContent="Height"
    Title="VolumetricSelection2077"
    Width="500"
    x:Class="VolumetricSelection2077.SettingsWindow"
    x:DataType="local:ViewModels.SettingsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:local="clr-namespace:VolumetricSelection2077"
    xmlns:vm="using:VolumetricSelection2077.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>

    <Border Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Header Row  -->
            <TextBlock
                FontSize="32"
                FontWeight="Bold"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                HorizontalAlignment="Left"
                Margin="5"
                Text="Settings" />

            <!--  First Row: Label  -->

            <TextBlock
                Grid.Column="0"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Margin="5"
                Text="Game Directory"
                ToolTip.Tip="{Binding Descriptions.GameDirectoryTooltip}"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="0"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Margin="5"
                Text="Node Filter"
                ToolTip.Tip="{Binding Descriptions.NodeFilterTooltip}"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="0"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Margin="5"
                Text="Save As Yaml"
                ToolTip.Tip="{Binding Descriptions.SaveAsYamlToolTip}"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Column="0"
                Grid.Row="4"
                HorizontalAlignment="Left"
                Margin="5"
                Text="Allow Output File Overwrite"
                ToolTip.Tip="{Binding Descriptions.AllowOverwriteTooltip}"
                VerticalAlignment="Center" />

            <!--  Second Row: Setting Control (e.g., ToggleSwitch)  -->
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                Margin="5"
                Text="{Binding Settings.GameDirectory}"
                Watermark="Path to game directory"
                x:Name="GameDirectoryTextBox" />

            <Button
                Background="#6b82b2"
                Grid.Column="1"
                Grid.Row="2"
                Margin="5"
                x:Name="NodeTypeFilter">
                <Button.Content>
                    <MultiBinding StringFormat="[ {0} / {1} ]">
                        <Binding Path="CheckedCount" />
                        <Binding Path="TotalCount" />
                    </MultiBinding>
                </Button.Content>
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#455472" />
                    </Style>
                </Button.Styles>
                <Button.Flyout>
                    <Flyout>
                        <StackPanel>
                            <StackPanel
                                HorizontalAlignment="Center"
                                Margin="0,0,0,5"
                                Orientation="Horizontal">
                                <Button
                                    Background="#6b82b2"
                                    Click="SelectAllClick"
                                    Content="Select All"
                                    HorizontalContentAlignment="Center"
                                    Margin="5"
                                    Width="100">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#455472" />
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                <Button
                                    Background="#6b82b2"
                                    Click="DeselectAllClick"
                                    Content="Deselect All"
                                    HorizontalContentAlignment="Center"
                                    Margin="5"
                                    Width="100">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="#455472" />
                                        </Style>
                                    </Button.Styles>
                                </Button>
                            </StackPanel>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                Watermark="Search..." />
                            <ItemsControl ItemsSource="{Binding FilteredNodeTypeFilterItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Width="400">
                                            <CheckBox IsChecked="{Binding IsChecked}" x:Name="FilterItemCheckBox" />
                                            <Label
                                                Content="{Binding Label}"
                                                Margin="5,0,0,0"
                                                PointerPressed="Label_Click"
                                                VerticalAlignment="Center" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <ToggleSwitch
                Grid.Column="1"
                Grid.Row="3"
                IsChecked="{Binding Settings.SaveAsYaml}"
                Margin="5"
                OffContent=""
                OnContent="" />
            <ToggleSwitch
                Grid.Column="1"
                Grid.Row="4"
                IsChecked="{Binding Settings.AllowOverwrite}"
                Margin="5"
                OffContent=""
                OnContent="" />
        </Grid>
    </Border>
</Window>