<Window
    Background="#171c26"
    Height="400"
    Icon="../assets/redCube.ico"
    Title="VolumetricSelection2077"
    Width="900"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="VolumetricSelection2077.MainWindow"
    x:DataType="local:MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VolumetricSelection2077"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="clr-namespace:VolumetricSelection2077.Services"
    xmlns:views="clr-namespace:VolumetricSelection2077.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Margin="5">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
            <TextBlock
                FontSize="32"
                FontWeight="Bold"
                Grid.Row="0"
                Margin="5"
                Text="VolumetricSelection2077" />

            <TextBox
                Grid.Row="1"
                Height="30"
                Margin="5"
                PropertyChanged="OutputFilename_PropertyChanged"
                Text="{Binding _settings.OutputFilename}"
                ToolTip.Tip="Enter the output filename, without extension"
                Watermark="Output Filename" />
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    GotFocus="ResourceFilterTextBox_GotFocus"
                    Grid.Column="0"
                    Height="30"
                    KeyDown="ResourceFilterTextBox_KeyDown"
                    Margin="5"
                    Name="ResourceFilterTextBox"
                    ToolTip.Tip="Filter by resource path, supports regex and partial matching"
                    Watermark="Resource Path Filter">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout Placement="BottomEdgeAlignedLeft" ShowMode="Transient">
                            <ScrollViewer MaxHeight="300">
                                <ItemsControl ItemsSource="{Binding ResourceNameFilters}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                                <Button
                                                    Background="#ad0002"
                                                    Click="RemoveResourceNameFilter_Click"
                                                    Content="×"
                                                    Grid.Column="0"
                                                    Margin="5">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                            <Setter Property="Background" Value="DarkRed" />
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Left"
                                                    Text="{Binding}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </TextBox>
                <TextBox
                    GotFocus="DebugNameFilterTextBox_GotFocus"
                    Grid.Column="1"
                    Height="30"
                    KeyDown="DebugNameFilterTextBox_KeyDown"
                    Margin="5,5,0,5"
                    Name="DebugNameFilterTextBox"
                    ToolTip.Tip="Filter by debug name, supports regex and partial matching"
                    Watermark="Debug Name Filter">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout Placement="BottomEdgeAlignedLeft" ShowMode="Transient">
                            <ScrollViewer MaxHeight="300">
                                <ItemsControl ItemsSource="{Binding DebugNameFilters}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                                <Button
                                                    Background="#ad0002"
                                                    Click="RemoveDebugNameFilter_Click"
                                                    Content="×"
                                                    Grid.Column="0"
                                                    Margin="5">
                                                    <Button.Styles>
                                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                            <Setter Property="Background" Value="DarkRed" />
                                                        </Style>
                                                    </Button.Styles>
                                                </Button>
                                                <TextBlock
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Left"
                                                    Text="{Binding}"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Flyout>
                    </FlyoutBase.AttachedFlyout>
                </TextBox>
            </Grid>
            <Grid Grid.Row="3" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Background="#ad0002"
                    Click="ClearLogButton_Click"
                    Grid.Column="0"
                    Height="25"
                    VerticalAlignment="Bottom"
                    Width="65">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="DarkRed" />
                        </Style>
                    </Button.Styles>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock
                            FontSize="10"
                            Text="Clear Log"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button
                    Background="#6b82b2"
                    Click="SettingsButton_Click"
                    Content="Settings"
                    Grid.Column="2">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#455472" />
                        </Style>
                    </Button.Styles>
                </Button>
                <Button
                    Background="#6b82b2"
                    Click="Benchmark_Click"
                    Content="Benchmark"
                    Grid.Column="3"
                    IsVisible="{Binding _settings.DebugMode}"
                    Margin="5,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#455472" />
                        </Style>
                    </Button.Styles>
                </Button>
                <!--
                <Button Grid.Column="3"
                       Content="Merge Output"
                       Margin="5,0,0,0"
                       Background="#5755d9">
                       <Button.Styles>
                           <Style Selector="Button:pointerover /template/ ContentPresenter">
                               <Setter Property="Background" Value="#4b48d6"/>
                           </Style>
                       </Button.Styles>
                </Button>
                -->
                <Button
                    Background="#5755d9"
                    Click="FindSelectedButton_Click"
                    Content="Find Selected"
                    Grid.Column="4"
                    Margin="5,0,0,0">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#4b48d6" />
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
            <ContentControl Grid.Row="4" x:Name="SettingsContent" />
            <views:LogViewer
                Grid.Row="5"
                Margin="5"
                x:Name="LogViewer" />
            <TextBlock
                FontSize="10"
                Foreground="White"
                Grid.Row="5"
                HorizontalAlignment="Right"
                Margin="5"
                Text="{Binding _settings.ProgramVersion}"
                VerticalAlignment="Bottom" />
        </Grid>
    </Border>
</Window>